<odoo>
    <data>
        <!-- ========  List View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_country_info_list">
            <field name="name">Tourgull Country Information</field>
            <field name="model">tourgull_visa.country_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- ========  Form  View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_country_info_form">
            <field name="name">Tourgull Country info Form</field>
            <field name="model">tourgull_visa.country_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ========  Action View  =======-->
        <record model="ir.actions.act_window" id="tourgull_visa_country_info_action">
            <field name="name">Tourgull Tab info window</field>
            <field name="res_model">tourgull_visa.country_info</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>