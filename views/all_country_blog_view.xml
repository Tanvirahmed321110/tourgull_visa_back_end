<odoo>
    <data>
        <!-- ========  List View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_country_blog_list">
            <field name="name">Tourgull Country Blog</field>
            <field name="model">tourgull_visa.all_country_blog</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="slider_image_url"/>
                    <field name="slider_top_content_title"/>
                    <field name="slider_top_content_description"/>
                </tree>
            </field>
        </record>


        <!-- ========  Form  View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_all_country_blog_form">
            <field name="name">Tourgull all_country_blog Form</field>
            <field name="model">tourgull_visa.all_country_blog</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <!-- sidebar -->
                            <group string="Slider">
                                <field name="slider_image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                                <field name="slider_image_url"/>
                            </group>

                            <!-- Sidebar Content -->
                            <group string="Slider Content">
                                <field name="slider_top_content_title" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                                <field name="slider_top_content_description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ========  Action View  =======-->
        <record model="ir.actions.act_window" id="tourgull_visa_county_blog_action">
            <field name="name">Tourgull Visa Country Blog window</field>
            <field name="res_model">tourgull_visa.all_country_blog</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>