<odoo>
    <data>
        <!-- ========  List View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_category_list">
            <field name="name">Tourgull  Category </field>
            <field name="model">tourgull_visa.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- ========  Form  View  =======-->
        <record model="ir.ui.view" id="tourgull_visa_category_form">
            <field name="name">Tourgull all Category Form</field>
            <field name="model">tourgull_visa.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                         <group string="Category">
                             <field name="name"/>
                         </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ========  Action View  =======-->
        <record model="ir.actions.act_window" id="tourgull_category_action">
            <field name="name">Tourgull  Country  window</field>
            <field name="res_model">tourgull_visa.category</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>